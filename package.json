{
  "name": "ts-template",
  "version": "0.1.0",
  "description": "A Typescript template project for spinning up new projects quickly.",
  "main": "dist/src/main.js",
  "files": [
    "dist"
  ],
  "typings": "./dist/ts-template.d.ts",
  "scripts": {
    "clean": "rimraf dist/{src,test}",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "test": "cross-env NODE_ENV=test nyc mocha dist/test --require dotenv-flow/config",
    "travis": "npm-run-all build test",
    "test-watch": "cross-env NODE_ENV=test nodemon --exec nyc --reporter=lcov --reporter=text --reporter=html mocha dist/test --require dotenv-flow/config",
    "typedoc": "typedoc --out ./docs/typedoc/ ./src/",
    "api-extractor": "api-extractor run --local --verbose",
    "api-documenter": "api-documenter markdown -i ./docs/input/ -o ./docs/markdown/",
    "gen-docs": "npm-run-all api-extractor api-documenter typedoc",
    "tsc": "tsc",
    "tsc-watch": "cross-env NODE_ENV=development tsc -p tsconfig.json --watch",
    "build": "npm-run-all clean lint tsc",
    "dev": "npm-run-all build start",
    "watch": "npm-run-all clean dev:watch",
    "dev:watch": "npm-run-all --parallel tsc-watch test-watch",
    "debug": "nodemon --inspect --watch src -e ts,ejs --exec npm run dev",
    "start": "node --require dotenv-flow/config ."
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "coverage/*",
      "docs/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintime4tea/ts-template.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Justin Gross",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/justintime4tea/ts-template/issues"
  },
  "homepage": "https://github.com/justintime4tea/ts-template#readme",
  "dependencies": {
    "cross-env": "^5.2.0",
    "dotenv-flow": "^3.0.0-rc.1"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.3.4",
    "@microsoft/api-extractor": "^7.2.2",
    "@microsoft/tsdoc": "^0.12.9",
    "@salesforce/ts-sinon": "^1.0.6",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rewire": "^4.0.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
