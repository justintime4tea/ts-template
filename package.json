{
  "name": "ts-template",
  "version": "0.1.0",
  "description": "A Typescript template project for spinning up new projects quickly.",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "tsc-watch": "tsc -p tsconfig.json --watch",
    "build": "npm-run-all clean lint tsc",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "nyc mocha dist/test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justintime4tea/ts-template.git"
  },
  "keywords": [
    "typescript",
    "template"
  ],
  "author": "Justin Gross",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/justintime4tea/ts-template/issues"
  },
  "homepage": "https://github.com/justintime4tea/ts-template#readme",
  "dependencies": {
    "dotenv": "^8.0.0"
  },
  "devDependencies": {
    "@microsoft/tsdoc": "^0.12.9",
    "@salesforce/ts-sinon": "^1.0.6",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.10",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.2",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "rewire": "^4.0.1",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
